@using Microsoft.AspNetCore.Identity
@inject SignInManager<BlogUser> SignInManager
@inject UserManager<BlogUser> UserManager

<ul class="navbar-nav" id="navbarResponsive">
    @if (SignInManager.IsSignedIn(User))
    {
        
            var user = await UserManager.GetUserAsync(User);
        
        <li class="nav-item border border-2">
            <a class="nav-link text-white" title="Manage">Hello @user.FirstName @user.LastName!</a>
        </li>
        <li class="nav-item" >
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class= "nav-link btn btn-link text-warning">Logout</button>
            </form>
        </li>

    }
    else
    {

        <li class="nav-item">
            <a class="nav-link text-warning fw-bold" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-warning fw-bold" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>


    }

</ul>