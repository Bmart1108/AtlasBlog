<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>The Atlas Blog</title>

    <link rel="icon" type="image/x-icon" href="~/Img/BMAPPTOUCHICON.png" />
    <link rel="icon" type="image/x-icon" href="~/Img/BMFAVICON32x32.png" />
    <link href="~/css/styles.css" rel="stylesheet" />

    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">


    <!-- Core theme CSS (includes Bootstrap)-->

</head>
<body>

    <!-- Navigation-->
    <nav class="navbar fixed-top navbar-expand-lg navbar-light" id="mainNav">
        <div class="container-fluid px-4 px-lg-5">
            <img src="~/Img/Brandon MartinWhiteLOGO1.png" height=60 />

            <a class="navbar-brand justify-content-start" asp-controller="Home" asp-action="Index"><span class="text-warning">||</span>Brandon's Blog<span class="text-warning">||</span></a>
            @*      <form class="mt-5" asp-action="SearchIndex" asp-controller="BlogPosts">
                <input name="SearchTerm" class="form-control" />
                <button type="submit" class="btn btn-warning btn-sm w-100">Search </button>
                </form>*@

            <form class="st-default-search-input mt-2" asp-action="SearchIndex" asp-controller="BlogPosts">
                <input id="Mainsearch" name="SearchTerm"/> 
                
                <button class="btn btn-sm btn-outline-warning py-2 mb-1" type="submit">Search</button>
               
            </form>
            <button class="navbar-toggler"   type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto py-4 py-lg-0">
                    <li class="nav-item border-2"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Blogs" asp-action="Index">View Blogs</a></li>
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="BlogPosts" asp-action="Index">Read Posts</a></li>
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="https://bmartin-portfolio.netlify.app/">About</a></li>
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-action="ContactMe" asp-controller="Home">Contact Me</a></li>
                </ul>
                <partial name="_LoginPartial" />
            </div>

        </div>
    </nav>
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('Img/blog-pic-b2c.jpg.png')">
        
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <span class="subheading"></span>
                        @*     <form class="mt-5" asp-action="SearchIndex" asp-controller="BlogPosts">
                            <input name="SearchTerm" class="form-control" />
                            <button type="submit" class="btn btn-warning btn-sm w-100">Search </button>
                            </form>*@
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        @RenderBody()
    </div>


    <!-- Footer-->
    <footer class="border-top">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <ul class="list-inline text-center">
                        <li class="list-inline-item">
                            <a href="https://twitter.com/BeeMartin1108">
                                <span class="fa-stack fa-lg">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://www.linkedin.com/in/brandon-martin-601104124/">
                                <span class="fa-stack fa-lg">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-linkedin-in fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://github.com/Bmart1108">
                                <span class="fa-stack fa-lg">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    </ul>
                    <div class="small text-center text-muted fst-italic fw-bold">Copyright &copy; Brandon Martin 2022</div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Core theme JS-->
    <script src="~/js/scripts.js"></script>

    <script>

        var quill = new Quill('#editor', {
            theme: 'snow'
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>